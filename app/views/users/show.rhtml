<% if @comments.any? %>
<h4>Comments</h4>	
	<table border = "0" cellpadding="5" cellspacing="3"  width = "100%">
 		<tr>
			<td align="center" valign="top" bgcolor="#e1e1e1" width="64%" nowrap>
 			<font size="1" color="#6b6b6b" face="verdana,arial,helvetica,sans-serif">
  				<b>Name</b>
 			</font>
            </td>
 			<td align="center" valign="top" bgcolor="#e1e1e1" width="36%" nowrap>
 			<font size="1" color="#6b6b6b" face="verdana,arial,helvetica,sans-serif">
  				<b>Body</b>
 			</font>
           	</td>
  		</tr>
  		<% for post in @posts %>
  			<% if post.type == Comment %>
  				<tr align="center" style = "background: 
					<%= "#B5EAAA" if post.goat == true %>
    				<%= "#EEB4B4" if post.goat != true %>;
					color: 
					<%= "green" if post.goat == true %>
					<%= "#B22222" if post.goat != true %>;">
    				<td><b><%=link_to post.name, :action => 'show', :controller => "#{Post.find_by_id(post.post_id).type}s", :id => post.post_id %></td></b>
    				<td><font size="1"><%= truncate(post.body, 200) %></font></td>   
  				</tr>
  			<% end %>
		<% end %>
	</table>
	
<% end %>	

<br />
<% unless @user.friends.blank? %>
    <h2><%= @user.doc_name %> trusts: </h2>
        <ul><% for pal in @friends %> 
            <li><%= link_to pal.name, :action => 'show', :controller => "users", :id => pal.id %></li> 
        <% end %></ul>
<% end %>
<br />
<h4><%= @user.doc_name %> is trusted by:</h4>
<ul>
<% for person in @allusers %>
    <% if person.friends.include?(@user) %>
        <li><%= link_to person.name, :action => 'show', :controller => "users", :id => person.id %></li>
    <% end %>
    <% end %></ul>
