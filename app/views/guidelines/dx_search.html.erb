<%= stylesheet_link_tag "application" %>
<%= stylesheet_link_tag "lightwindow" %>
<%= javascript_include_tag :defaults %>
<%= javascript_include_tag "lightwindow" %>
<%= javascript_include_tag "guideline_dynform" %>

<body class='drug_search'>
  <div id="form_wrapper">
    <div class='search'>
      <%= select_tag 'search_param',
            options_for_select([ 'icd9', 'icd10' ]), :style => 'width:80px' %>
      <input id='dxtext' name='dxtext' type='text' onkeypress='enterMeansSearch(event);'>
      <%= button_to_function "Search", "searchForResults();", :id => 'search_button' %>
      <img id="spinner" style="display: none;" src="/images/spinner.gif" />

      <div id='results'></div>
    </div>

    <br />
    <label>Currently selected Dxcodes:</label> <hr>
    <ul id='post_dxcodes'></ul>

    <%= button_to_function "Apply", "#", :style => "width: 50px", :onClick => "insertToPage('dx_code', 'dx_desc', '');" %>
  </div>
</body>
