<%= link_to_function 'Clear', "$(this).up('#results').update();" %>
<% if @results.is_a?(String) %>
  <div id='no_results'>
  Sorry, no matches found in the Health Canada drug database. <br /> Perhaps try searching by 
  <% if @results == 'brandname' %>
  Active Ingredient (generic name)
  <% else %>
  Brand Name
  <% end %>
  ?
  </div>
<% else %>
  <%= render :partial => 'result', :collection => @results %>
<% end %>
