	<%= simple_format truncate(post.body, 100) %>
	</div>
	<%= clear_div %>
</div>
    <% end %>
 
 <% unless @treatments_today.size == 0 %>
<h3>Treatments Added Today (<%= @treatments_today.size %>)</h3>
    <ul><% for post in @treatments_today %>
           <li><%= link_to post.name, url_for(:action => 'show', :controller => 'treatments', :id => post) %></li>
    <% end %>
