<% @page_title = "Welcome!" %>
<div id="posts">
 
<!-- oooh.. change this so it goes into the partial later, yo! -->
  <h3>Last Five Warnings Added</h3>
    <% for post in @latest_w %>
    <div class="post">
        <%= user_thumb post.creator %>
        <div class="body">
            <h4><%= link_to post.name, url_for(:action => 'show', :controller => 'warnings', :id => post) %></h4>
            <p class="meta">
               <span class="comments"><%= link_to pluralize(post.comments_count, 'comment'), :action => 'show', :controller => 'warnings', :id => post %></span>
               <%= time_ago_in_words post.updated_at %> ago
            </p>
            <%= simple_format truncate(post.body, 100) %>
        </div>
        <%= clear_div %>
    </div>
    <% end %>
    
  <% unless @warnings_today.size == 0 %>
  <h3>Warnings Added Today (<%= @warnings_today.size %>)</h3>
    <ul><% for post in @warnings_today %>
            <li><%= link_to post.name, url_for(:action => 'show', :controller => 'warnings', :id => post) %></li>
    <% end %>
    </ul>
  <% end %>

  <h3>Last Five Interactions Added</h3>
  <% for post in @latest_i %>
                <div class="post">
                    <%= user_thumb post.creator %>
                    <div class="body">
                        <h4><%= link_to (post.name + " and " + post.drug2), url_for(:action => 'show', :controller => 'interactions', :id => post) %></h4>
						<p class="meta">
                            <span class="comments"><%= link_to pluralize(post.comments_count, 'comment'), :action => 'show', :controller => 'interactions', :id => post %></span>
                            <%= time_ago_in_words post.updated_at %> ago
                        </p>
                        <%= simple_format truncate(post.body, 100) %>
                    </div>
                    <%= clear_div %>
                </div>
            <% end %>
            
<% unless @interactions_today.size == 0 %>
  <h3>Interactions Added Today (<%= @interactions_today.size %>)</h3>
          <ul><% for post in @interactions_today %>
                 <li><%= link_to (post.name + " and " + post.drug2), url_for(:action => 'show', :controller => 'interactions', :id => post) %></li>
            <% end %>
            </ul>
        <% end %>
 
 <h3>Last Five Treatments Added</h3>
 <% for post in @latest_t %>
